<Window x:Class="LiveShot.UI.Forms.CaptureScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:LiveShot.UI.Controls"
        mc:Ignorable="d"
        Title="CaptureScreenWindow" Height="450" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowState="Maximized"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <controls:SelectCanvas Grid.Row="0" x:Name="SelectCanvas" SizeLabel="{Binding ElementName=SizeLabel}" />
        <Label Name="SizeLabel" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Center" FontSize="16"
               Background="#1EFFFFFF" Foreground="White" Content="Empty selection" Padding="25,10" />
    </Grid>
</Window>